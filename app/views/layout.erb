<!DOCTYPE html>
<html>
  <head>
  <title> Bookmark Manager</title>
  </head>

  <body>

  <% if current_user %>
    <p>Welcome, <%= current_user.email %></p>
    <form action="/session/end" method="post">
      <input type="submit" value="Sign out">
    </form>
  <% end %>

  <% if flash[:messages] && !flash[:messages].empty? %>
    <ul id='messages'>
    <% flash[:messages].each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>

  <%= yield %>

  </body>
</html>
